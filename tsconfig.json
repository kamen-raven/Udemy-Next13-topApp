{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"],
      //styles
      "~styles/*": ["./src/styles/*"],
      "~global_styles": ["./src/styles/globals.scss"],
      "~variables": ["./src/styles/variables/_variables.scss"],
      "~mixin/*": ["./src/styles/mixin/*"],
      "~adaptive": ["./src/styles/mixin/_adaptive.scss"],
      //images
      "~img/*": ["./public/images/*"],
      "~svg/*": ["./public/svg/*"],
      //fsd
      "~app/*": ["./src/components/01_app/*"],
      "~pages/*": ["./src/components/02_pages/*"],
      "~widgets/*": ["./src/components/03_widgets/*"],
      "~features/*": ["./src/components/04_features/*"],
      "~entities/*": ["./src/components/05_entities/*"],
      "~shared/*": ["./src/components/06_shared/*"]
    }
  },
  "include": ["svg.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx",".next/types/**/*.ts",],
  "exclude": ["node_modules"]
}
